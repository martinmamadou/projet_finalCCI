{% extends "base.html.twig" %}

{% block title %}
	Profile
{% endblock %}

{% block body %}
	<section class="content profile">
		<h1>profile</h1>

		<div class="user-info">
			<div class="left">
			<img src="{{user.imageName ? vich_uploader_asset(user) : asset('img/defaut.jpeg')}}" alt="" width='90' height='90'>
			</div>
			<div class="right">
				<div class="top">
					<h2>{{user.username}}</h2>
					<p>{{user.email}}</p>
					<div class="info">
                        {% if user.userInfo is not null %}
						<p>| {{user.userInfo.taille}}cm |</p>
						<p>{{user.userInfo.poids}}kg |</p>
                        {% else %}
                        {% endif %}
                            <p>| 0 cm |</p>
                            <p>| 0 kg |</p>
						
						<a href='{{path('user.profile.infos',{id:user.id})}}'><i class="fa-regular fa-pen-to-square"></i></a>
					</div>
					<div class="btn-container">
						<a href='{{path('user.profile.edit',{id:user.id})}}' class='button btn-principal'>editer le profil <i class="fa-regular fa-pen-to-square"></i></a>
					</div>
				</div>
				<div class="separator"></div>
				<div class="bottom">
                <div class="link">
				    <p>Vos programme favoris</p>
                    <a href="{{path('user.favoris.index')}}">voir tout</a>
                </div>
				{% include "Frontend/User/_swiperFav.html.twig" %}
				</div>
			</div>
		</div>
	</section>
{% endblock %}