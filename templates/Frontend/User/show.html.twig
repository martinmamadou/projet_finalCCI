{% extends "base.html.twig" %}

{% block title %}
	Profile
{% endblock %}

{% block body %}
	<section class="content profile">
		<h1>profile</h1>

		<div class="user-info">
			<div class="left">
			<img src="{{vich_uploader_asset(user)}}" alt="" width='70' height='70'>
			</div>
			<div class="right">
				<div class="top">
					<h2>{{user.username}}</h2>
					<p>{{user.email}}</p>
					<div class="info">
                        {% if user.userInfo.taille is not null %}
						<p>| {{user.userInfo.taille}}cm |</p>
                        {% else %}
                            <p>|0 cm |</p>
                        {% endif %}
						<p>{{user.userInfo.poids}}kg |</p>
						<a href='{{path('user.profile.infos',{id:user.id})}}'><i class="fa-regular fa-pen-to-square"></i></a>
					</div>
					<div class="btn-container">
						<a href='{{path('user.profile.edit',{id:user.id})}}' class='button btn-principal'>editer le profil <i class="fa-regular fa-pen-to-square"></i></a>
					</div>
				</div>
				<div class="separator"></div>
				<div class="bottom">
				<p>Vos programme favoris</p>
				{% include "Frontend/User/_swiperFav.html.twig" %}
				</div>
			</div>
		</div>
	</section>
{% endblock %}