{% extends 'base.html.twig' %}

{% block title %}Hello ProgrammeController!
{% endblock %}

{% block body %}
	<section class="content">
		{% for programme in programmes %}
			<a href="{{path('user.programmes.list',{slug:programme.categorie.slug})}}">
				{% if programme.categorie.name is defined %}

					<div class="cateList" style="background: center / cover url('{{ vich_uploader_asset(programme.categorie)}}')">
						<p>{{programme.categorie.name}}</p>
					</div>
				{% endif %}
			</a>
		{% endfor %}
	</section>
{% endblock %}
