{% extends "base.html.twig" %}

    {% block body %}
	<section class="container mt-4">
		<h1 class="text-center">Se connecter</h1>

		<form action="{{ path('app.login') }}" method="POST" class="card p-3 w-50 mx-auto mt-3">
			{% if error %}
				<div class="alert alert-danger" role="alert">
					{{ error.messageKey|trans(error.messageData, 'security') }}
				</div>
			{% endif %}

			<div class="mb-3">
				<label for="email" class="form-label">Email:</label>
				<input type="email" id="email" name="_username" value="{{ lastUsername }}" class="form-control">
			</div>

			<div class="mb-3">
				<label for="password" class="form-label">Password:</label>
				<input type="password" id="password" name="_password" class="form-control">
			</div>
			{# If you want to control the URL the user is redirected to on success#}
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button type="submit" class="button btn-principal">Se connecter</button>
		</form>
	</section>
{% endblock %}
