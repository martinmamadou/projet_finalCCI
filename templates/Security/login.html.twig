{% extends "base.html.twig" %}



    {% block body %}
	<section class="login">
		<h1 class="text-center">Se connecter</h1>

		<div id="center-form">
		<form action="{{ path('app.login') }}" method="POST" >
			{% if error %}
				<div class="alert alert-danger" role="alert">
					{{ error.messageKey|trans(error.messageData, 'security') }}
				</div>
			{% endif %}

		
				<label for="email" class="form-label">Email:</label>
				<input type="email" id="email" name="_username" value="{{ lastUsername }}" class="form-control">
	

		
				<label for="password" class="form-label">Password:</label>
				<input type="password" id="password" name="_password" class="form-control">
				
				<input type="checkbox" class='pass'>Show password 
		

			{# If you want to control the URL the user is redirected to on success#}
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<div class="btn-container">
			
			<a href="{{path('app.register')}}" class='button btn-secondaire'>inscription</a>
			<button type="submit" class="button btn-principal">connexion</button>
			</div>
		</form>
		</div>
	</section>
	<script>
		const showPassword = document.querySelector('.pass')
const password = document.querySelector('#password')
console.log(password)

function showingPassword(){
    if(password.type==='password'){
        password.type = 'text'
    } else {
        password.type = 'password'
    }
}
showPassword.addEventListener('click', showingPassword)
	</script>

	
{% endblock %}
