<div id="center-form exerciceForm">
{{ form_start(form,{'attr':{'class' : 'programme_form'}}) }}
{{ form_row(form.name) }}
{{form_row(form.shortDescription)}}
{{form_row(form.categorie)}}
{{form_row(form.proType)}}

<div class="mb-3">
	<button type="button" class="add_item_link btn btn-secondary" data-collection-holder-class="exercices-list">Ajouter des exercices</button>
</div>

<ul class="exercices-list row justify-content-between align-items-center" data-index="{{ form.exercices|length > 0 ? form.exercices|last.vars.name + 1 : 0 }}" data-prototype="{{ form_widget(form.exercices.vars.prototype)|e('html_attr') }}">
	{% for exercice in form.exercices %}
		<li class="col-md-5">
			<button type="button" class="btn btn-danger text-light btn-remove-collection">
				<i class="bi bi-x-octagon-fill"></i>
			</button>
			{{ form_row(exercice) }}
		</li>
	{% endfor %}
</ul>
<div class="btn-container">
<button type="submit" class="button btn-secondaire add">Ajouter</button>
</div>
{{ form_end(form) }}
</div>

