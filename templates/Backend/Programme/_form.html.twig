{{ form_start(form, {'attr': {'class': 'card p-3 w-50 mx-auto mt-3'}}) }}
{{ form_row(form.name) }}
{{form_row(form.shortDescription)}}

<div class="mb-3">
	<button type="button" class="add_item_link btn btn-secondary" data-collection-holder-class="exercices-list">Ajouter un exercice</button>
</div>

<ul class="exercices-list row justify-content-between align-items-center" data-index="{{ form.exerciceMaisons|length > 0 ? form.exerciceMaisons|last.vars.name + 1 : 0 }}" data-prototype="{{ form_widget(form.exerciceMaisons.vars.prototype)|e('html_attr') }}">
	{% for exercice in form.exerciceMaisons %}
		<li class="col-md-5">
			<button type="button" class="btn btn-danger text-light btn-remove-collection">
				<i class="bi bi-x-octagon-fill"></i>
			</button>
			{{ form_row(exercice) }}
		</li>
	{% endfor %}
</ul>

<button type="submit" class="btn-secondaire">Ajouter</button>
{{ form_end(form) }}
